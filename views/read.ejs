                    console.log(response.data[i].postTitle);
                    console.log(response.data[i].postContent);

                    var title = "<br><br><h6>" + "Title: " + response.data[i].postTitle + "</h6>";
                    var content = "<p>" + response.data[i].postContent + "</p><hr>";
                    var result = title + content;

                    console.log(result);
                    document.getElementById("get-title-result").innerHTML += result;
                }
            })
            .catch(function (error) {
                console.log(error);
            });
    };

