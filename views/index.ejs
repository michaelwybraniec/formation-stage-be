<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<style>
    /* .row{
        border: 1px solid red;
    }
    div[class^="col-"]{
        border: 1px solid green;
    } */
</style>

<body>
    <div class="container text-center mt-4">

        <div class="row">

            <div class="col-12 col-md-8 mx-auto bg-light border bg-gradient-light">

                <div class="row">
                    <div class="col-12 col-sm-8 mb-2 mt-2">
                        <input type="text" id="get-input" class="form-control" placeholder="What do you want to get?">
                    </div>
                    <div class="col-12 col-sm-4 mb-4 mt-2">
                        <button onclick="get()" class="btn btn-primary btn-md btn-block">GET</button>
                    </div>

                    <div class="col-12 col-sm-8 mb-2 text-left">
                        <p id="get-result"></p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-sm-8 mb-2">
                        <input type="text" id="post-url-input" class="form-control mb-2" placeholder="Where do you want to post?">
                        <textarea type="text" id="post-text-input" rows="6" class="form-control mb-2" placeholder="Message..."></textarea>
                    </div>

                    <div class="col-12 col-sm-4 mb-2">
                        <button onclick="post()" class="btn btn-primary btn-md btn-block">POST</button>
                    </div>

                    <div class="col-12 col-sm-8 mb-2 text-left">
                        <p id="post-result"></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>

<script>
    function get() {
        var url = document.getElementById("get-input").value;

        axios.get(url)
            .then(function (response) {
                document.getElementById("get-result").innerHTML = JSON.stringify(response.data);
            })
            .catch(function (error) {
                console.log(error);
            });
    };

    function post() {
        var url = document.getElementById("post-url-input").value;
        var obj = JSON.parse(document.getElementById("post-text-input").value);

        axios.post(url, obj)
            .then(function (response) {
                document.getElementById("post-result").innerHTML = JSON.stringify(response.data);
            })
            .catch(function (error) {
                console.log(error);
            });
    };



</script>

</html>