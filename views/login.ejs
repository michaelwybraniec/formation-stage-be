<body>

    <div class="container mt-2">

        <div class="row mb-5">
            <div class="col-12 col-sm-8 mx-auto text-right">
                <a href="http://localhost:3000/articles/write">
                    <small>Write</small>
                </a>
                <small>/</small>
                <a href="http://localhost:3000/articles/read">
                    <small>Read</small>
                </a>
                <small>/</small>
                <a href="http://localhost:3000/articles/login">
                    <small>Login</small>
                </a>
                <small>/</small>
                <a href="http://localhost:3000/articles/registration">
                    <small>Register</small>
                </a>
            </div>
        </div>


        <div class="row">
            <div class="col-12 col-sm-8 mx-auto text-left">
                <h2>Login</h2>
                <p>
                    <small>Please fill in this form to login.</small>
                </p>
            </div>
            <div class="col-12 col-sm-8 mx-auto bg-light border rounded">
                <div class="form-group row mt-1">
                </div>
                <!-- ////////////////////////////////////////////// Username -->
                <div class="form-group row mt-3">
                    <label for="username-input" class="col-12 col-sm-4 col-form-label">Username:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="text" id="username-input" value="mike" placeholder="username">
                        <div id="username-invalid-feedback" class="text-danger d-none">
                            <small>Please type a username.</small>
                        </div>
                    </div>
                </div>


                <!-- ////////////////////////////////////////////// Password -->
                <div class="form-group row">
                    <label for="password-input" class="col-12 col-sm-4 col-form-label">Password:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="password" id="password-input" value="pass" placeholder="••••••••">
                        <div id="password-invalid-feedback" class="text-danger d-none">
                            <small>Please type a passwod.</small>
                        </div>
                    </div>
                </div>

                <div class="form-group row mx-center">

                    <!-- ////////////////////////////////////////////// Submit button -->
                    <div class="col-6 col-sm-4 mx-auto">
                        <button type="submit" onclick="collectRegistrationData()" class="btn btn-success btn-md btn-block">Submit</button>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-8 mx-auto mt-2 text-right">
                <p>
                    <small>Don't have an account?
                        <a href="http://localhost:3000/articles/registration">Register</a>.</small>
                </p>
            </div>
        </div>
    </div>
</body>


<script>

    function checkNotEmpty(input, inputName) {
        var errorDiv = document.getElementById(inputName + "-invalid-feedback");
        if (input === undefined || input === null || input === "") {
            errorDiv.classList.remove("d-none");
            errorDiv.classList.add("d-block");
        } else {
            errorDiv.classList.add("d-none");
            errorDiv.classList.remove("d-block");
        }
    }


    function collectRegistrationData() {
        var username = document.getElementById("username-input").value;
        var password = document.getElementById("password-input").value;

        checkNotEmpty(username, "username");
        checkNotEmpty(password, "password");

        var obj = {
            "username": username,
            "password": password,
        };
        console.log(obj);
        post(obj);
    }


    function post(data) {
        axios.post("/articles/login", data)
            .then(function (response) {
                console.log(obj);
                setTimeout(function () {
                    window.location = "/articles/read";
                }, 1000);
            })
            .catch(function (error) {
                console.log(error);
            });
    };


</script>

</html>