<body>

    <div class="container mt-5">

        <div class="row">





            <div class="col-12 col-sm-8 mx-auto bg-light border rounded">
                <div class="form-group row mt-3">
                    <div class="col-12 mx-auto text-center">
                        <h2>Login</h2>
                        <p><small>Please fill in this form to login.</small></p>
                    </div>
                </div>
                <!-- ////////////////////////////////////////////// Username -->
                <div class="form-group row mt-3">
                    <label for="username-input" class="col-12 col-sm-4 col-form-label">Username:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="text" id="username-input" placeholder="username">
                        <div id="username-invalid-feedback" class="text-danger d-none">
                            <small>Please choose a username.</small>
                        </div>
                    </div>
                </div>


                <!-- ////////////////////////////////////////////// Password -->
                <div class="form-group row">
                    <label for="password-input" class="col-12 col-sm-4 col-form-label">Password:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="password" id="password-input" placeholder="••••••••">
                        <div id="password-invalid-feedback" class="text-danger d-none">
                            <small>Please choose a password (8-20 characters long).</small>
                        </div>
                    </div>
                </div>



                <div class="form-group row mx-center">

                    <!-- ////////////////////////////////////////////// Submit button -->
                    <div class="col-6 col-sm-4 mx-auto">
                        <button type="submit" onclick="collectRegistrationData()" class="btn btn-success btn-md btn-block">Submit</button>
                    </div>

                </div>




            </div>

        </div>




    </div>
    </div>

</body>