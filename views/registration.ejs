<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<style>
    .row{
        border: 1px solid red;
    }
    div[class^="col-"]{
        border: 1px solid green;
    }
</style>

<body>

    <div class="container mt-2">

        <div class="row mb-5">
            <div class="col-12 col-md-9 mx-auto text-right">
                <a href="http://localhost:3000/articles/write">
                    <small>Write</small></a>
                <a href="http://localhost:3000/articles/read">
                    <small>Read</small></a>
                <a href="http://localhost:3000/login">
                    <small>Login</small></a>
                <a href="http://localhost:3000/registration">
                    <small>Register</small>
                </a>
            </div>
        </div>


        <div class="row">

            <div class="col-12 col-md-9 mx-auto text-center">
                <h2>Register</h2>
                <p>
                    <small>Please fill in this form to create an account.</small>
                </p>
            </div>

            <div class="col-12 col-md-9 mx-auto bg-light border rounded">
                <!-- ////////////////////////////////////////////// Username -->
                <div class="form-group row mt-3">
                    <label for="username-input" class="col-12 col-sm-4 col-form-label">Username:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="text" id="username-input" placeholder="username">
                        <div id="username-invalid-feedback" class="text-danger d-none">
                            <small>Please choose a username.</small>
                        </div>
                        <!-- ////////////////////////////////////// Login error duplicated -->
                        <div class="col-12 col-sm-12">
                            <small class="text-success" id="login-duplicate-found-error"></small>
                        </div>
                    </div>
                </div>



                <!-- ////////////////////////////////////////////// Email -->
                <div class="form-group row">

                    <label for="email-input" class="col-12 col-sm-4 col-form-label">Email:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="email" id="email-input" placeholder="name@example.com">
                        <div id="email-invalid-feedback" class="text-danger d-none">
                            <small>Please provide an email.</small>
                        </div>
                    </div>
                </div>

                <!-- ////////////////////////////////////////////// Password -->
                <div class="form-group row">
                    <label for="password-input" class="col-12 col-sm-4 col-form-label">Password:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="password" id="password-input" placeholder="••••••••">
                        <div id="password-invalid-feedback" class="text-danger d-none">
                            <small>Please choose a password (8-20 characters long).</small>
                        </div>
                    </div>
                </div>

                <!-- ////////////////////////////////////////////// Conf password -->
                <div class="form-group row">
                    <label for="password-confirm-input" class="col-12 col-sm-4 col-form-label">Confirm password:
                    </label>
                    <div class="col-12 col-sm-8">
                        <input  class="form-control" type="password" id="password-confirm-input" placeholder="••••••••">
                        <div id="password-confirm-invalid-feedback" class="text-danger d-none">
                            <small>Please confirm the password.</small>
                        </div>
                        <!-- ////////////////////////////////////// Pass are not identical -->
                        <div class="col-12 col-sm-12">
                            <small class="text-warning" id="pass-not-identical-error"></small>
                        </div>
                    </div>
                </div>

                <!-- ////////////////////////////////////////////// Date of birth value="2011-08-19" -->
                <div class="form-group row">
                    <label for="dateofbirth-input" class="col-12 col-sm-4 col-form-label">Date of birth:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="date" id="dateofbirth-input" placeholder="19/08/1995">
                        <div id="dateofbirth-invalid-feedback" class="text-danger d-none">
                            <small>Please provide a date of birth.</small>
                        </div>
                    </div>
                </div>

                <!-- ////////////////////////////////////////////// Bonus option! -->
                <div class="form-group row">
                    <label for="color-input" class="col-12 col-sm-4 col-form-label">Color:</label>
                    <div class="col-12 col-sm-8">
                        <input class="form-control" type="color" id="color-input">

                        <hr>

                        <h6 class="text-right">
                            <small>By creating an account you agree to our
                                <a href="#">Terms & Privacy.</a></small>
                        </h6>
                    </div>
                </div>

                <div class="form-group row text-center">

                    <!-- ////////////////////////////////////////////// Submit confirmation -->
                    <div class="col-12 col-sm-8 text-center">
                        <small class="text-success" id="registration-confirmation"></small>
                    </div>

                    <!-- ////////////////////////////////////////////// Submit button -->
                    <div class="col-12 col-sm-4">
                        <button type="submit" onclick="collectRegistrationData()" class="btn btn-success btn-md btn-block">Submit</button>
                    </div>

                </div>
            </div>

            <div class="col-12 col-md-9 mx-auto mt-2 text-right">
                <p>
                    <small>Already have an account?
                        <a href="http://localhost:3000/login">Sign in</a>.</small>
                </p>
            </div>

        </div>
    </div>

</body>

<script>





    // document.getElementById("pass-not-identical-error").innerHTML
    //     = "<small class='text-warning'><b>Password does not match.</b><small>";



    function isEmpty(input, inputName) {
        var errorDiv = document.getElementById(inputName + "-invalid-feedback");
        if (input === undefined || input === null || input === "") {
            errorDiv.classList.remove("d-none");
            errorDiv.classList.add("d-block");
            return true;
        } else {
            errorDiv.classList.add("d-none");
            errorDiv.classList.remove("d-block");
            return false;
        }
    }

    function  passwordsDifferent(password, passwordConfirm) { 
        var alertError = document.getElementById("pass-not-identical-error");
        if(password === passwordConfirm) {
            alertError.innerHTML = "";
            return true;
        }
        else {
            alertError.innerHTML = "<b>Password does not match.</b>";
            return false;
        }
     };


    function collectRegistrationData() {
        var username = document.getElementById("username-input").value;
        var email = document.getElementById("email-input").value;
        var password = document.getElementById("password-input").value;
        var passwordConfirm = document.getElementById("password-confirm-input").value;
        var dateofbirth = document.getElementById("dateofbirth-input").value;
        var color = document.getElementById("color-input").value;

        if( password !== passwordConfirm) 



        var hasError = false;
        hasError = isEmpty(username, "username") |
            isEmpty(email, "email") |
            isEmpty(password, "password") |
            isEmpty(passwordConfirm, "password-confirm") |
            isEmpty(dateofbirth, "dateofbirth") |
            passwordsDifferent(password, passwordConfirm);




        // Same as 'if(emptyField === true) return;'

        if (hasError) return;



        var obj = {
            "username": username,
            "email": email,
            "password": password,
            "dateofbirt": dateofbirth,
            "color": color
        };

        post(obj);
    }


    // function get() {
    //     var url = document.getElementById("get-input").value;
    //     axios.get(url)
    //         .then(function (response) {
    //             document.getElementById("get-result").
    //             innerHTML = JSON.stringify(response.data);
    //         })
    //         .catch(function (error) {
    //             console.log(error);
    //         });
    // };


    function post(data) {
        axios.post("/registration", data)
            .then(function (response) {
                if (response.status === 200) {
                    document.getElementById("registration-confirmation").
                        innerHTML = "<b>Submitted successfully!</b>";

                    setTimeout(function () {
                        window.location = "/login";
                    }, 1000);
                }
            })

            .catch(function (error) {
                document.getElementById("login-duplicate-found-error").innerHTML
                    = "<small class='text-warning'><b>This username already exists.</b><small>";
                console.log(error);
            });
    };



</script>

</html>