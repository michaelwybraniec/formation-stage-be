<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<style>
    /* .row {
        border: 1px solid red;
    }

    div[class^="col-"] {
        border: 1px solid green;
    } */

    #color-adj {
        background-color: #F2F2F2;
    }
</style>

<body>
    <div class="container mt-2">
        <div class="row mb-5">
            <div class="col-12 col-sm-8 mx-auto text-right">
                <a href="http://localhost:3000/articles/write">
                    <small>Write</small></a>
                <a href="http://localhost:3000/articles/read">
                    <small>Read</small></a>
                <a href="http://localhost:3000/login">
                    <small>Login</small></a>
                <a href="http://localhost:3000/registration">
                    <small>Register</small></a>
            </div>
        </div>

        <div class="row mb-1">
            <div class="col-12 col-sm-8 mx-auto">
                <h5 for="post-title-input">New post:</h5>
            </div>
        </div>

        <div class="row">
            <div id="color-adj" class="col-12 col-sm-8 mx-auto border rounded">

                <div class="row">
                    <div class="col-12 mt-3">
                        <input type="text" id="post-title-input" class="form-control" placeholder="title:">
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mt-2">
                        <textarea type="text" id="post-content-input" rows="6" class="form-control" placeholder="content:"></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 mb-2 mt-2 text-left">
                        <small id="post-confirmation"></small>
                    </div>
                </div>

            </div>

            <div class="col-12 col-sm-8 mx-auto">

                <div class="row mt-3">
                    <div class="col-12 col-sm-8 text-right">
                        <button onclick="window.location='http://localhost:3000/articles/read';" class="btn btn-link btn-sm">
                            <small>view posts</small></button>
                    </div>

                    <div class="col-12 col-sm-4 mx-right">
                        <button onclick="post()" class="btn btn-dark btn-md btn-block">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>

    function get() {
        var url = document.getElementById("get-input").value;
        axios.get(url)
            .then(function (response) {
                document.getElementById("get-result").innerHTML = JSON.stringify(response.data);
            })
            .catch(function (error) {
                console.log(error);
            });
    };

    function post() {
        var title = document.getElementById("post-title-input").value;
        var content = document.getElementById("post-content-input").value;

        var data = {
            "postTitle": title,
            "postContent": content,
        };

        axios.post("/articles", data)
            .then(function (response) {
                document.getElementById("post-confirmation").innerHTML = response.data;
                setTimeout(function () {
                        window.location = "/articles/write";
                    }, 500);
            })
            .catch(function (error) {
                console.log(error);
            });
    };

</script>
</html>